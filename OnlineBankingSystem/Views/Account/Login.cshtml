
@{
    ViewBag.Title = "Login";
}

<h2 align="center">Login</h2>
<hr/>
<form method="post" action="/Account/Login" name="Login">
    <div class="text-danger" align="center">
        @ViewBag.Message     
    </div>
    <table align="Center">
        <tr >
            <td width="150px">
                UserID
            </td>
            <td>
                <input type="text" id="txtUserName" name="txtUserName" height="28" width="200" />
            </td>
            
        </tr>
        <tr height=20px> </tr>

        <tr>
            <td width="150px">
                Password
            </td>
            <td>
                <input type="password" id="txtPassword" name="txtPassword" height="28" width="200" />
            </td>
        </tr>
        <tr height=20px> </tr>
        <tr>
            <td>
                <input type="submit" id="btnLogin" name="btnLogin" value="Login" />
            </td>
            <td>
                <div id="error" runat="server" style="color:red"></div>
            </td>
        </tr>

    </table>
</form>


